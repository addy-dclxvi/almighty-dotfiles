######################
##  COMMON COMMAND  ##
######################

## launch terminal
super + Return
	termite	

## launch alternative terminal
super + shift + Return
	urxvt

## volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	amixer {-D pulse sset Master '5%+',-D pulse sset Master '5%-',set Master toggle}

## music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

## program launcher
super + shift + d
	dmenu_run -b -i -p Search -fn "Noto Sans:size=8" -w 480 -h 20 -x 20 -y 20
super + d
	rofi -modi run,drun,window -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns 3 -font "Noto Sans 8"

## make sxhkd reload its configuration files
super + s
	pkill -USR1 -x sxhkd
	
## launch thunar
super + shift + f
	thunar
	
## launch chromium
super + shift + w
	chromium
	
## launch geany
super + shift + g
	geany

## fancy lockscreen :)
super + l
	i3lock-fancy
	
## take a screenshot
Print
	scrot 'scrot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f ~ ; viewnior ~/$f'


######################
##  BSPWM COMMANDS  ##
######################

## aesthetics mode
super + a
	~/.config/bspwm/aesthectics

## quit bspwm normally
super + control + Escape
	bspc quit

## reload bspwm config
super + shift + BackSpace
	~/.config/bspwm/bspwmrc

## close app
super + Escape
	bspc node -c

## he disobey you? kill!
super + shift + Escape
	bspc node -k

## fullscreen
super + f
	bspc desktop -l next
	
## spit horizontal & split vertical, like in i3-gaps :D
super + {h,v}
	bspc node -p {east,south}
	
## preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

## cancel it, I set it to super + r. like in my herbstluftwm config
super + r
	bspc node -p cancel

## toggle beetwen pseudo-tiled & tiled
super + p
    bspc node -t "~"{pseudo_tiled,tiled}

## toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}
    
## just in case you want to go back to tiled mode but the toggle keybind doesn't work
super + t
	bspc node -t tiled

## send the window in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

## focus the next node in the current desktop
alt + Tab
	bspc node -f next.local
	
## focus the previous node in the current desktop
alt + shift + Tab
	bspc node -f prev.local

## focus the next/previous desktop in the current monitor
## i'm using control + alt + left/right. you know what they say? old habit, they die hard :D
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

## focus the last node/desktop
super + {Tab,grave}
	bspc {node,desktop} -f last

## focus or send to the given desktop
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'
	
## jump to another workspace
super + {1-8}
	bspc desktop --focus^{1-8}

## expanding windows
super + ctrl + {Left,Right,Up,Down}
	bspc node -z {left -5 0,right 5 0,top 0 -5,bottom 0 5}
	
## shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 5 0,right -5 0,top 0 5,bottom 0 -5}
	
## move floating windows
ctrl + shift + {Left,Down,Up,Right}
	bspc node -v {-10 0,0 10,0 -10,10 0}
